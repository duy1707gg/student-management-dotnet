@model student_management_dotnet.ViewModel.AttendanceViewModel

@{
    ViewData["Title"] = "Create Attendance";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Create Attendance</h1>
        <a asp-action="Index" class="text-blue-500 hover:text-blue-700 font-semibold">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="mb-4">
                    <label asp-for="EnrollmentId" class="block text-sm font-medium text-gray-700 mb-2">Student - Course</label>
                    <select asp-for="EnrollmentId" asp-items="Model.EnrollmentList" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Select Enrollment --</option>
                    </select>
                    <span asp-validation-for="EnrollmentId" class="text-sm text-red-600"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="ClassDate" class="block text-sm font-medium text-gray-700 mb-2">Class Date</label>
                    <input asp-for="ClassDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ClassDate" class="text-sm text-red-600"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select asp-for="Status" asp-items="Model.StatusList" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-sm text-red-600"></span>
                </div>
                
                <div class="mb-4 md:col-span-2">
                    <label asp-for="Note" class="block text-sm font-medium text-gray-700 mb-2">Note</label>
                    <textarea asp-for="Note" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Optional note about attendance"></textarea>
                    <span asp-validation-for="Note" class="text-sm text-red-600"></span>
                </div>
            </div>
            
            <div class="flex justify-end mt-6">
                <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded mr-2">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}