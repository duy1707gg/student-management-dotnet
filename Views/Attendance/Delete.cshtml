@model student_management_dotnet.Models.Attendance

<h1>Delete Attendance</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Attendance ID</dt>
        <dd class="col-sm-10">@Model.AttendanceId</dd>
        <dt class="col-sm-2">Enrollment ID</dt>
        <dd class="col-sm-10">@Model.EnrollmentId</dd>
        <dt class="col-sm-2">Class Date</dt>
        <dd class="col-sm-10">@Model.ClassDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Note</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="AttendanceId" />
    <button type="submit">Delete</button>
</form>
