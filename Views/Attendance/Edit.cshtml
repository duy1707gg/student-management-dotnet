@model student_management_dotnet.Models.Attendance

<h1>Edit Attendance</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="AttendanceId" />
    <div>
        <label asp-for="EnrollmentId"></label>
        <select asp-for="EnrollmentId" asp-items="ViewBag.EnrollmentId"></select>
    </div>
    <div>
        <label asp-for="ClassDate"></label>
        <input asp-for="ClassDate" type="date" />
    </div>
    <div>
        <label asp-for="Status"></label>
        <input asp-for="Status" />
    </div>
    <div>
        <label asp-for="Note"></label>
        <input asp-for="Note" />
    </div>
    <button type="submit">Save</button>
</form>