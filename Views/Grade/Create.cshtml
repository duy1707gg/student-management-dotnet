@model student_management_dotnet.ViewModel.ManageGradeViewModel

@{
    ViewData["Title"] = Model.GradeId.HasValue ? "Edit Grade" : "Create Grade";
}

<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">@ViewData["Title"]</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" 
          asp-action="Create"
          asp-controller="Grade"
          class="bg-white shadow-md rounded-lg p-6">
        <div asp-validation-summary="ModelOnly" class="mb-4 text-red-600" />
        
        @if (Model.GradeId.HasValue)
        {
            <input type="hidden" asp-for="GradeId" />
        }

        <!-- Student Info (visible only in Edit mode) -->
        @if (!string.IsNullOrEmpty(Model.StudentName))
        {
            <div class="mb-6 p-4 bg-gray-50 rounded-md">
                <p class="text-gray-700"><span class="font-semibold">Student:</span> @Model.StudentName</p>
                <p class="text-gray-700"><span class="font-semibold">Class:</span> @Model.ClassName</p>
            </div>
        }

        <!-- Enrollment Selection -->
        <div class="mb-4">
            <label asp-for="EnrollmentId" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <select asp-for="EnrollmentId" 
                    asp-items="Model.EnrollmentSelectList" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">-- Select Student Enrollment --</option>
            </select>
            <span asp-validation-for="EnrollmentId" class="text-red-600 text-sm"></span>
        </div>

        <!-- Add this before the exam type section -->
@if (Model.ExamTypeOptions == null || !Model.ExamTypeOptions.Any())
{
    <div class="bg-yellow-100 p-3 mb-4">
        Warning: No exam types available
    </div>
}

        <!-- Exam Type -->
        <div class="mb-4">
            <label asp-for="ExamType" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <select asp-for="ExamType" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">-- Select Exam Type --</option>
                @foreach (var examType in Model.ExamTypeOptions)
                {
                    <option value="@examType">@examType</option>
                }
            </select>
            <span asp-validation-for="ExamType" class="text-red-600 text-sm"></span>
        </div>

        <!-- Score -->
        <div class="mb-4">
            <label asp-for="Score" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Score" type="number" step="0.01" min="0" max="100"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Score" class="text-red-600 text-sm"></span>
        </div>

        <!-- Comments -->
        <div class="mb-6">
            <label asp-for="Comment" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <textarea asp-for="Comment" rows="3"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Comment" class="text-red-600 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex items-center justify-between">
            <button type="submit" 
                    class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                @(Model.GradeId.HasValue ? "Update" : "Create")
            </button>
            <a asp-action="Index" 
               class="text-gray-600 hover:text-gray-800 font-semibold">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add client-side validation to ensure required fields are filled
        $(document).ready(function() {
            // Validate the form on submit
            $("form").on("submit", function() {
                var isValid = true;
                
                // Check enrollment
                if ($("#EnrollmentId").val() === "") {
                    isValid = false;
                    $("span[data-valmsg-for='EnrollmentId']").text("Please select a student enrollment");
                }
                
                // Check exam type
                if ($("#ExamType").val() === "") {
                    isValid = false;
                    $("span[data-valmsg-for='ExamType']").text("Please select an exam type");
                }
                
                // Check score
                if ($("#Score").val() === "") {
                    isValid = false;
                    $("span[data-valmsg-for='Score']").text("Please enter a score");
                }
                
                return isValid;
            });
        });
    </script>
}