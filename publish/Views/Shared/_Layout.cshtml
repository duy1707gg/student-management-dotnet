@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Học viên và Lớp học Trực tuyến</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#10b981',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/student_management_dotnet.styles.css" asp-append-version="true" />
</head>

<body class="min-h-screen bg-gray-50">
    <nav class="bg-white shadow-md">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-3">
                <a class="text-xl font-bold text-primary hover:text-primary/80 transition-colors" asp-area=""
                    asp-controller="Home" asp-action="Index">Quản lý Học viên</a>
                <div class="md:flex md:items-center">
                    <ul class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4">
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Home"
                                asp-action="Index">Trang chủ</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="User"
                                asp-action="Index">Học viên</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Class"
                                asp-action="Index">Lớp học</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Course"
                                asp-action="Index">Khóa học</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="User"
                                asp-action="Index">Giáo viên</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Schedule"
                                asp-action="Index">Lịch học</a></li>
                        <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Home"
                                asp-action="Privacy">Quyền riêng tư</a></li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="text-red-600 hover:text-red-400 transition-colors" asp-controller="Auth"
                                    asp-action="Logout">Đăng xuất</a></li>
                        }
                        else
                        {
                            <li><a class="text-gray-700 hover:text-primary transition-colors" asp-controller="Auth"
                                    asp-action="Login">Đăng nhập</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mx-auto px-4 py-8">
        <main role="main" class="bg-white rounded-lg shadow-sm p-6">
            @RenderBody()
        </main>
    </div>
    <footer class="border-t mt-12 py-6 text-gray-600">
        <div class="container mx-auto px-4">
            &copy; 2025 - Hệ thống Quản lý Học viên và Lớp học Trực tuyến - <a class="text-primary hover:underline"
                asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
