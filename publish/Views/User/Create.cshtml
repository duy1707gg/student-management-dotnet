@model student_management_dotnet.Models.User

<h1 class="text-3xl font-bold text-gray-800 mb-6">Create User</h1>

<form asp-action="Create" class="bg-white shadow-md rounded-lg p-6 space-y-4">
    <div>
        <label asp-for="Username" class="block text-gray-700 font-semibold">Username</label>
        <input asp-for="Username" class="w-full p-2 border border-gray-300 rounded focus:ring focus:ring-blue-300" />
        <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="PasswordHash" class="block text-gray-700 font-semibold">Password</label>
        <input asp-for="PasswordHash" type="password" class="w-full p-2 border border-gray-300 rounded focus:ring focus:ring-blue-300" />
        <span asp-validation-for="PasswordHash" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Email" class="block text-gray-700 font-semibold">Email</label>
        <input asp-for="Email" class="w-full p-2 border border-gray-300 rounded focus:ring focus:ring-blue-300" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="FullName" class="block text-gray-700 font-semibold">Full Name</label>
        <input asp-for="FullName" class="w-full p-2 border border-gray-300 rounded focus:ring focus:ring-blue-300" />
        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Role" class="block text-gray-700 font-semibold">Role</label>
        <select asp-for="Role" class="w-full p-2 border border-gray-300 rounded focus:ring focus:ring-blue-300">
            <option value="Admin">Admin</option>
            <option value="Student">Student</option>
        </select>
    </div>

    <div class="flex space-x-4">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
            Create
        </button>
        <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded">
            Cancel
        </a>
    </div>
</form>
