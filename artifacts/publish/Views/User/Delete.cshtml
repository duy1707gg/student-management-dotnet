@model student_management_dotnet.Models.User

<h1 class="text-3xl font-bold text-red-600 mb-6">Delete User</h1>

<h3 class="text-lg text-gray-700 mb-4">Are you sure you want to delete this user?</h3>

<div class="bg-white shadow-md rounded-lg p-6">
    <h4 class="text-xl font-semibold text-gray-800 mb-4">User Details</h4>
    <hr class="mb-4" />

    <dl class="grid grid-cols-2 gap-4">
        <dt class="font-semibold text-gray-700">User ID</dt>
        <dd class="text-gray-900">@Model.UserId</dd>

        <dt class="font-semibold text-gray-700">Username</dt>
        <dd class="text-gray-900">@Model.Username</dd>

        <dt class="font-semibold text-gray-700">Email</dt>
        <dd class="text-gray-900">@Model.Email</dd>

        <dt class="font-semibold text-gray-700">Full Name</dt>
        <dd class="text-gray-900">@Model.FullName</dd>

        <dt class="font-semibold text-gray-700">Role</dt>
        <dd class="text-gray-900">@Model.Role</dd>
    </dl>
</div>

<div class="mt-6 flex space-x-4">
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded">
            Delete
        </button>
    </form>
    <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded">
        Back to List
    </a>
</div>
